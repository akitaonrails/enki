<h1>New post</h1>

<%= render :partial => 'admin/shared/uploads', :locals => { :uploads => @uploads } %>

<% semantic_form_for([:admin, @post]) do |form| -%>
  <%= render :partial => 'form', :locals => {:form => form} -%>
  <% form.button_field_set do -%>
    <%= form.commit_button("Save") -%>
  <% end -%>
<% end -%>
